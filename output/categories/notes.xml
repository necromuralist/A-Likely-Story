&lt;div class="outline-text-4" id="text-org7d0fa38"&gt;
&lt;div class="highlight"&gt;&lt;pre&gt;&lt;span&gt;&lt;/span&gt;from argparse import Namespace
&lt;/pre&gt;&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;div id="outline-container-orgbd6226a" class="outline-4"&gt;
&lt;h4 id="orgbd6226a"&gt;PyPi&lt;/h4&gt;
&lt;div class="outline-text-4" id="text-orgbd6226a"&gt;
&lt;div class="highlight"&gt;&lt;pre&gt;&lt;span&gt;&lt;/span&gt;from expects import (
    equal,
    expect,
)
&lt;/pre&gt;&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
